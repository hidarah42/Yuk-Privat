<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hidarah42.yukprivat.Murid.Cariguru"
    tools:showIn="@layout/cariguru">

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvjudulcariguru"
                    android:text="Cari Guru"
                    android:textColor="@color/warnamurid"
                    android:layout_centerHorizontal="true"/>
                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/autocomplitmatpel"
                    android:textColor="@color/warnamurid"
                    android:hint="Mata Pelajaran"
                    android:layout_below="@id/tvjudulcariguru"/>
                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/autocomplitwilayah"
                    android:textColor="@color/warnamurid"
                    android:hint="Wilayah (Kecamatan)"
                    android:layout_below="@id/autocomplitmatpel"/>
                <Button
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:id="@+id/buttoncariguru"
                    android:background="@color/warnamurid"
                    android:text="CARI"
                    android:textColor="@color/putih"
                    android:layout_below="@id/autocomplitwilayah"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"/>
                <ProgressBar
                    android:id="@+id/cariguru_progressBar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>
